# Basic env config file (do NOT commit secrets)
# For quick local dev the defaults will use SQLite and no S3
# App
APP_NAME=streamly-backend
HOST=0.0.0.0
PORT=8000
DEBUG=True

# DATABASE_URL examples:
# SQLite (default):
DATABASE_URL=sqlite:///./dev.db
# Postgres example:
# DATABASE_URL=postgresql://postgres:postgres@db:5432/streamly

# JWT
JWT_SECRET=changeme_replace_with_strong_random_value
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60*24*7

# AWS S3 (for uploads). If you want local MinIO, set endpoint url and credentials in docker-compose.
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=

# Stripe (for subscription/webhook placeholders)
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=

# CORS (comma-separated)
ALLOWED_HOSTS=*

# MinIO dev example (if running via docker-compose set these)
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
